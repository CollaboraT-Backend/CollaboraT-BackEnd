generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id                       String        @id @default(uuid()) 
  name                     String
  description              String
  due_date                 DateTime
  start_date               DateTime
  priority                 Priority
  status                   Status
  project_id               String  
  collaborator_id_assigned String  
  created_by               String   
  created_at               DateTime @default(now())
  updated_at               DateTime @updatedAt

}
enum Priority {
  low
  medium
  high
}
enum Status {
  pending
  in_progress
  completed
}



